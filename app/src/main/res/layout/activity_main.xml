<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ImageView filling the frame -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img4"
            android:scaleType="centerCrop"/>

        <!-- TextView overlaid on the ImageView with marginTop -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Random"
            android:textColor="@color/myPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Stories"
            android:textColor="@color/myPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="155dp"
            android:gravity="center"
            android:text="MAKE THE \n FIRST MOVE"
            android:textColor="@color/myPrimary"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!-- LinearLayout for Buttons at the bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <!-- Custom Facebook Button layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/login_with_facbook_btn"
                android:orientation="horizontal"
                android:background="@drawable/button_bg"
                android:elevation="10dp"
                android:clickable="true"
                android:gravity="center">

                <!-- Facebook logo on the left -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/facebook_img"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Facebook logo"/>

                <!-- Button text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="Continue with Facebook"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/usemobile_btn"
                android:backgroundTint="@color/myPrimary"
                android:background="@drawable/login_number_bg_btn"
                android:elevation="10dp"
                android:gravity="center">

                <!-- Facebook logo on the left -->
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/mobile_logo"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Facebook logo"/>

                <!-- Button text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="Use mobile number"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:text="By signing up, you agree to our Terms.See how we use your data in our Privacy Policy."/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="We never post to Facebook."/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
